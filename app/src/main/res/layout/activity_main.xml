<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/balanceView"
        android:layout_width="274dp"
        android:layout_height="47dp"
        android:text="@string/balance"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="680dp" />

    <Button
        android:id="@+id/enterSearch"
        android:layout_width="121dp"
        android:layout_height="47dp"
        android:text="ENTER"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="50dp" />

    <AutoCompleteTextView
        android:id="@+id/searchStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/search_for_a_stock"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="47dp" />

    <Switch
        android:id="@+id/switchSymbolSearch"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:text="Enable Search by Symbol"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="4dp" />

    <EditText
        android:id="@+id/textquantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="# of shares"
        android:inputType="number"/>


    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply " />

    <RadioGroup
        android:id="@+id/radioUpdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/radioBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy" />

        <RadioButton
            android:id="@+id/radioSell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sell" />

        <TextView
            android:id="@+id/textStockInformation"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="SYMBOL: CURRENT PRICE: " />

    </RadioGroup>

</LinearLayout>